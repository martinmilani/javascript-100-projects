---
import { PROJECTS } from "../const";
---

<section class="mx-auto flex justify-center mt-20 px-4">
  <div
    class="grid gap-10 mb-6 lg:mb-16 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mx-auto"
  >
    {
      PROJECTS.map((project, index) => {
        const num = `${index + 1}`.padStart(2, "0");

        return (
          <div class="card max-w-96 bg-base-100 shadow-xl">
            <span>
              <span class="absolute top-2 left-2 -rotate-12 text-2xl font-bold text-white">
                #{num}
              </span>
              <img
                class="w-full rounded-t-md overflow-hidden object-cover aspect-video"
                src={`./projects/${num}.webp`}
                alt={`Captura de pantalla del proyecto ${project.title}`}
              />
            </span>

            <div class="card-body gap-4">
              <h2 class="card-title">
                {project.title}
                {index + 1 === PROJECTS.length && (
                  <div class="badge badge-secondary">NEW</div>
                )}
              </h2>

              <p class="">{project.description}</p>

              <ul class="card-actions justify-end my-4">
                {project.learnings.map((learning) => (
                  <li class="badge badge-neutral text-xs">{learning}</li>
                ))}
              </ul>

              <div class="card-actions flex-row flex-nowrap items-center justify-center">
                <a
                  role="button"
                  target="_blank"
                  href={`/${project.slug}`}
                  class="btn btn-outline btn-primary w-1/2"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-world"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <>
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                      <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
                      <path d="M3.6 9h16.8" />
                      <path d="M3.6 15h16.8" />
                      <path d="M11.5 3a17 17 0 0 0 0 18" />
                      <path d="M12.5 3a17 17 0 0 1 0 18" />
                    </>
                  </svg>
                  Demo
                </a>
                <a
                  role="button"
                  target="_blank"
                  class="btn btn-outline btn-primary w-1/2"
                  href={`https://github.com/martinmilani/javascript-100-projects/tree/main/${project.slug}`}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-brand-github"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <>
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                      <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
                    </>
                  </svg>
                  Code
                </a>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</section>
