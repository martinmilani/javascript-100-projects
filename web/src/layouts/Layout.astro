---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-base-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="JavaScrip 100 Projects" content="100 Projects of JavaScript" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
    <meta name="JavaScrip 100 Projects" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: dark;
  }
</style>
